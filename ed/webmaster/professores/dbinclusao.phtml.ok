<?PHP
	$conn = pg_Connect("localhost", "5432", "", "", "ed");
	     
	if (!$conn) {
		echo "Não foi possivel abrir banco de dados.\n";
	exit;
	}
	if($nome_professor == ""){
		echo "<BR><BR> O campo NOME DO PROFESSOR deve ser preenchido!\n";
