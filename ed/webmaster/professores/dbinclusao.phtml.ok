                echo "<BR><BR>\n";
		echo "<BR><form><input type=\"button\" value=\"Retornar\" onClick=\"history.back()\"></form> ";
             	pg_Close($conn);
		exit;	
	}
	if($chave_professor == ""){
		echo "<BR><BR> O campo Chave deve ser preenchido!\n";
		echo "<BR><BR>\n<BR><BR>\n";
		echo "<BR><form><input type=\"button\" value=\"Retornar\" onClick=\"history.back()\"></form> ";
             	pg_Close($conn);
		exit;	
	}
	if($senha_professor == ""){
		echo "<BR><BR> O campo SENHA deve ser preenchido!\n";
		echo "<BR><BR>\n";
